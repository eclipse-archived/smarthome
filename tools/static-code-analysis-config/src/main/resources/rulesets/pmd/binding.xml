<?xml version="1.0"?>
<ruleset name="Bindings Ruleset" xmlns="http://pmd.sourceforge.net/ruleset/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

  <description>Contains set of PMD rules for analysing bindings in the Eclipse SmartHome project</description>

  <!-- We'll use the entire 'default' ruleset -->
  <rule ref="rulesets/pmd/bundle.xml" />
  
   <!-- Another custom defined rule (with XPath expression) -->
  <rule ref="rulesets/pmd/xpath/classpath.xml/AvoidMavenPomderivedInClasspath">
    <priority>3</priority>
  </rule>
  
  <rule ref="rulesets/pmd/xpath/pom.xml/AvoidOverridingParentPomConfiguration">
    <priority>3</priority>
  </rule>
</ruleset>
