[  
  {  
    "name":"rule1",
    "tags":[  
      "motion",
      "lamp",
	  "dimmer"
    ],
    "description":"Switch lamp on motion detection.",
	"config":{  
      "dimmerLevel":{
	      "type":"integer",
          "label":"Dimmer Level",
          "description":"Input for dimmer level.",
		  "value":100
	  }
    },
    "on":[  
      {  
        "id":"MyMotionTrigger",
        "type":"CompositeMotionTrigger",
        "config":{  
          "item1":"MyMotionDetector1",
		  "item2":"MyMotionDetector2"
        }
      }
    ],
    "if":[  
      {  
        "id":"MyMotionCondition",
        "type":"ComparatorCondition:CompareBoolean",
        "config":{  
          "operator":"==",
		  "constraint":true
        },
        "input":{  
          "left":"MyMotionTrigger.motion"
        }
      }
    ],
    "then":[
      {  
        "id":"MyDimmerAction",
        "type":"ItemAction:DimmerAction",
        "config":{  
          "item":"item5",
		  "itemProperty":"level",
		  "itemPropertyValue":100
        },
        "input":{  
          "level":"$itemPropertyValue"
        }
      }
    ]
  },
  {  
    "name":"rule2",
    "template.uid":"MotionSwitchRuleTemplate",
    "tags":[  
      "motion",
      "dimmer"
    ],
    "config":{  
      "motionItem":"MyMotionSensor",
      "dimmerItem":"MyDimmerActuator",
	  "dimmerLevel":100
    }
  }
]
