{  
  "triggers": {
    "SampleTrigger": {
      "label": "SampleTrigger label",
      "description": "Sample Trigger description.",
      "config": {
        "sampleProperty": {
          "type": "TEXT",
          "label": "SampleTrigger property",
          "description": "Sample Trigger property description",
          "required": false,
          "defaultValue": "sample default value"
        }
      },
      "output": {
        "triggerOutput": {
          "type": "java.lang.String",
          "label": "TriggerOutput label",
          "description": "Text from user input or default message.",
          "reference": "consoleInput",
          "defaultValue": "Hello World!!!"
        }
      }
	  }, 
    "SampleTrigger:CustomTrigger": {
      "label": "CustomTrigger label",
      "description": "Custom Trigger description.",
      "config": {
        "customSampleProperty": {
          "type": "TEXT",
          "label": "CustomTrigger property",
          "description": "Custom Trigger property description",
          "required": false,
          "defaultValue": "custom sample default value"
        }
      },
      "output": {
        "customTriggerOutput": {
          "type": "java.lang.String",
          "label": "CustomTriggerOutput label",
          "description": "Text from user input or default message.",
          "reference": "$triggerOutput"
        }
      }
    }
  },
  "conditions": {
    "SampleCondition": {
      "label": "SampleCondition label",
      "description": "Sample Condition description",
      "config": {
        "operator": {
          "type": "TEXT",
          "description": "Valid operators are =,>,<,!=",
          "required": true
        },
        "constraint": {
          "type": "TEXT",
          "description": "Right operand which is compared with the input.",
          "required": true
        }
      },
      "input": {
        "conditionInput": {
          "type": "java.lang.String",
          "label": "ConditionInput",
          "description": "Left operand which will be evaluated.",
          "required": true
        }
      }
    }
  },
  "actions": {
  	"SampleAction": {
      "label": "SampleAction label",
      "description": "Sample Action description.",
      "config": {  
        "prefix": {  
          "type": "TEXT",
          "label": "prefix label",
          "description": "Defines the prefix description.",
          "defaultValue": "Default prefix",
          "required": false
        }
  	  },
      "input": {  
        "actionInput": {
          "type": "java.lang.String",
          "label": "ActionInput label",
          "description": "Text that will be printed.",
          "required": true
        }
      }
    },
    "SampleAction:CustomAction": {
      "label": "CustomAction label",
      "description": "Custom Action description.",
      "config": {  
        "myPrefix": {
          "type": "TEXT",
          "label": "prefix label",
          "description": "Defines the prefix description.",
          "context": "$prefix",
          "defaultValue": "<<< Default Custom Message",
          "required": false
        }
      },
      "input": {  
        "customActionInput": {
          "type": "java.lang.String",
          "label": "ActionInput label",
          "description": "Text that will be printed.",
          "reference": "$actionInput",
          "required": true
        }
      }
    }
  }
}