<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>

    <groupId>org.eclipse.smarthome.bundles</groupId>
    <artifactId>io</artifactId>
    <version>0.8.0-SNAPSHOT</version>
  </parent>

  <properties>
    <bundle.symbolicName>org.eclipse.smarthome.io.rest.core</bundle.symbolicName>
    <bundle.namespace>org.eclipse.smarthome.io.rest.core</bundle.namespace>
    <swagger.document.name>rest-core</swagger.document.name>
  </properties>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.eclipse.smarthome.io</groupId>
  <artifactId>org.eclipse.smarthome.io.rest.core</artifactId>

  <name>Eclipse SmartHome Core REST Interface</name>

  <packaging>eclipse-plugin</packaging>

  <build>
    <plugins>
      <!-- Activate swagger plugin -->
      <plugin>
        <groupId>com.github.kongchen</groupId>
        <artifactId>swagger-maven-plugin</artifactId>
        <configuration>
          <apiSources>
            <apiSource>
              <!-- Packages containing classes containing Swagger's annotation @Api -->
              <locations>org.eclipse.smarthome.io.rest.core.item;org.eclipse.smarthome.io.rest.core.thing;org.eclipse.smarthome.io.rest.core.binding;org.eclipse.smarthome.io.rest.core.discovery;org.eclipse.smarthome.io.rest.core.thing.setup;org.eclipse.smarthome.io.rest.core.link</locations>
            </apiSource>
          </apiSources>
        </configuration>
      </plugin>

      <!-- Package template files in a ZIP file. -->
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>package-templates</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/assembly/assemble.xml</descriptor>
              </descriptors>
              <finalName>org.eclipse.smarthome.io.swagger.templates</finalName>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Attach templates ZIP file as additional artifact for install and deploy. -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>target/org.eclipse.smarthome.io.swagger.templates.zip</file>
                  <type>zip</type>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
