<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.eclipse.smarthome.bundles</groupId>
    <artifactId>io</artifactId>
    <version>0.8.0-SNAPSHOT</version>
  </parent>

  <properties>
    <bundle.symbolicName>org.eclipse.smarthome.io.rest.sse</bundle.symbolicName>
    <bundle.namespace>org.eclipse.smarthome.io.rest.sse</bundle.namespace>
    <swagger.document.name>rest-sse</swagger.document.name>
  </properties>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.eclipse.smarthome.io</groupId>
  <artifactId>org.eclipse.smarthome.io.rest.sse</artifactId>

  <name>Eclipse SmartHome SSE Interface</name>

  <packaging>eclipse-plugin</packaging>

  <build>
    <plugins>

      <!-- Activate template files cleanup execution. -->
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <executions>
          <execution>
            <id>cleanup templates</id>
            <phase>clean</phase>
          </execution>
        </executions>
      </plugin>

      <!-- Activate unpack-dependencies executions. -->
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-dependencies</id>
            <phase>generate-resources</phase>
          </execution>
        </executions>
      </plugin>

      <!-- Activate swagger plugin -->
      <plugin>
        <groupId>com.github.kongchen</groupId>
        <artifactId>swagger-maven-plugin</artifactId>
        <configuration>
          <apiSources>
            <apiSource>
              <!-- Packages containing classes containing Swagger's annotation @Api -->
              <locations>org.eclipse.smarthome.io.rest.sse</locations>
            </apiSource>
          </apiSources>
        </configuration>
      </plugin>
    </plugins>
  </build>


  <dependencies>
    <dependency>
      <groupId>org.eclipse.smarthome.core</groupId>
      <artifactId>org.eclipse.smarthome.core.id</artifactId>
      <type>zip</type>
    </dependency>
  </dependencies>
</project>
