      label="Eclipse SmartHome Test Bundles"
      version="0.9.0.qualifier"
      provider-name="Eclipse.org">

   <description>
      This feature defines all bundles that needed to do OSGi based Unit testing.
   </description>

   <copyright>
      Copyright (C) 2014, openHAB UG (haftungsbeschr√§nkt) and others
   </copyright>

   <license url="%licenseURL">
      %license
   </license>

   <requires>
      <import plugin="org.eclipse.osgi"/>
      <import plugin="org.eclipse.osgi.services"/>
      <import plugin="org.slf4j.api"/>
      <import plugin="org.apache.commons.io"/>
      <import plugin="org.apache.commons.lang"/>
      <import plugin="org.eclipse.emf.common"/>
      <import plugin="org.eclipse.emf.ecore"/>
      <import plugin="org.antlr.runtime"/>
      <import plugin="javax.servlet" version="2.5.0" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="org.eclipse.smarthome.test"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
