<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="ble"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 org.eclipse.smarthome.thing-description.xsd">

	<thing-type id="parrot_flowerpower">
		<label>Parrot Flower Power</label>
		<description>Flower Power plant monitoring sensor
		</description>

		<channels>
            <channel id="led-state" typeId="switch">
            </channel>
            
            <channel id="soil-moisture" typeId="soil-moisture">
            </channel>

            <channel id="soil-fertiliser" typeId="soil-fertiliser">
            </channel>

            <channel id="air-temperature" typeId="temperature">
                <label>Air Temperature</label>
            </channel>

            <channel id="soil-temperature" typeId="temperature">
                <label>Soil Temperature</label>
            </channel>
            
            <channel id="luminance" typeId="luminance">
            </channel>
          			
            <channel id="rssi" typeId="rssi">
            </channel>
    
            <channel id="battery-level" typeId="system.battery-level">
            </channel>
     	</channels>

		<config-description>
			<parameter-group name="actions">
				<context>action</context>
				<label>Device Discovery</label>
			</parameter-group>
			<parameter-group name="setup">
				<context>setup</context>
				<label>Device Pairing</label>
			</parameter-group>
			<parameter name="pairing" type="integer" groupName="actions">
				<label>Device Pairing</label>
				<description><![CDATA[Device Pairing]]></description>
			</parameter>
			<parameter name="discovery" type="integer" groupName="actions">
				<label>Discover Device</label>
				<description><![CDATA[Start Discovery]]></description>
			</parameter>
			<parameter name="pin" type="text" groupName="setup">
				<label>PIN Number</label>
				<description><![CDATA[PIN Number]]></description>
			</parameter>
		</config-description>
	</thing-type>

    <!-- Channels only applicable to this thing -->

    <!-- Soil Moisture Channel -->
    <channel-type id="soil-moisture">
        <item-type>Number</item-type>
        <label>Soil Moisture</label>
        <description>Indicates the current soil moisture level</description>
        <category>Temperature</category>
        <state pattern="%.1f" readOnly="true">
        </state>
    </channel-type>

    <!-- Soil Fertiliser Channel -->
    <channel-type id="soil-fertiliser">
        <item-type>Number</item-type>
        <label>Soil Fertiliser</label>
        <description>Indicates the current soil fertiliser level</description>
        <category>Temperature</category>
        <state pattern="%.1f" readOnly="true">
        </state>
    </channel-type>

</thing:thing-descriptions>
