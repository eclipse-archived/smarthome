<thing:thing-descriptions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                          xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
                          bindingId="lwm2mleshan"
                          xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">
   <thing-type id="2" listed="false">
      <supported-bridge-type-refs>
         <bridge-type-ref id="client"/>
      </supported-bridge-type-refs>
      <label>LwM2M Access Control</label>
      <description><![CDATA[Access Control Object is used to check whether the LwM2M Server has access right for performing an operation.]]></description>
      <!--Optional channel "ACL" (2) will be added dynamically-->
      <channel-groups>
         <channel-group id="0" typeId="0"><!--Channel "Object ID" (0)--></channel-group>
         <channel-group id="1" typeId="1"><!--Channel "Object Instance ID" (1)--></channel-group>
         <channel-group id="3" typeId="3"><!--Channel "Access Control Owner" (3)--></channel-group>
      </channel-groups>
      <properties>
         <property name="ObjectID">2</property>
         <property name="ObjectURN">urn:oma:lwm2m:oma:2</property>
         <property name="MultipleInstances">Multiple</property>
         <property name="Mandatory">Optional</property>
      </properties>
   </thing-type>
   <channel-group-type id="0"><!--MultiInstances: Single-->
      <label>Object ID</label>
      <channels>
         <channel id="0" typeId="0"><!--Channel "Object ID", ID: 0, InstanceID: 0--></channel>
      </channels>
   </channel-group-type>
   <channel-type id="0">
      <item-type>Number</item-type>
      <label>Object ID</label>
      <description><![CDATA[The Object ID and The Object Instance ID are applied for.]]></description>
      <tags>
         <tag>Integer</tag>
      </tags>
      <state readOnly="true"/>
   </channel-type>
   <channel-group-type id="1"><!--MultiInstances: Single-->
      <label>Object Instance ID</label>
      <channels>
         <channel id="0" typeId="1"><!--Channel "Object Instance ID", ID: 1, InstanceID: 0--></channel>
      </channels>
   </channel-group-type>
   <channel-type id="1">
      <item-type>Number</item-type>
      <label>Object Instance ID</label>
      <description><![CDATA[See Table 20: LwM2M Identifiers.]]></description>
      <tags>
         <tag>Integer</tag>
      </tags>
      <state readOnly="true"/>
   </channel-type>
   <channel-group-type id="2"><!--MultiInstances: Multiple-->
      <label>ACL</label>
      <channels>
         <channel id="0" typeId="2"><!--Channel "ACL", ID: 2, InstanceID: 0--></channel>
      </channels>
   </channel-group-type>
   <channel-type id="2" advanced="true">
      <item-type>Number</item-type>
      <label>ACL</label>
      <description><![CDATA[The Resource Instance ID MUST be the Short Server ID of a certain LwM2M Server for which associated access rights are contained in the Resource Instance value.The Resource Instance ID 0 is a specific ID, determining the ACL Instance which contains the default access rights.Each bit set in the Resource Instance value, grants an access right to the LwM2M Server to the corresponding operation.The bit order is specified as below.1st LSB: R(Read, Observe, Discover, Write-Attributes)2nd LSB: W(Write)3rd LSB: E(Execute)4th LSB: D(Delete)5th LSB: C(Create)Other bits are reserved for future use.]]></description>
      <tags>
         <tag>Integer</tag>
      </tags>
   </channel-type>
   <channel-group-type id="3"><!--MultiInstances: Single-->
      <label>Access Control Owner</label>
      <channels>
         <channel id="0" typeId="3"><!--Channel "Access Control Owner", ID: 3, InstanceID: 0--></channel>
      </channels>
   </channel-group-type>
   <channel-type id="3">
      <item-type>Number</item-type>
      <label>Access Control Owner</label>
      <description><![CDATA[Short Server ID of a certain LwM2M Server; only such an LwM2M Server can manage the Resources of this Object Instance. The specific value MAX_ID=65535 means this Access Control Object Instance is created and modified during a Bootstrap phase only.]]></description>
      <tags>
         <tag>Integer</tag>
      </tags>
   </channel-type>
</thing:thing-descriptions>
